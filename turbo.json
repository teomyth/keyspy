{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "src/**/*.js", "tsconfig.json", "package.json"],
      "outputs": ["build/**", "dist/**"]
    },
    "build:native": {
      "inputs": [
        "src/bin/**/*",
        "scripts/build-native.js",
        "scripts/compile-*.sh",
        "scripts/compile-*.bat"
      ],
      "outputs": ["bin/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.ts", "tests/**/*.ts"],
      "outputs": ["test-results/**"]
    },
    "test:unit": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.ts", "tests/unit/**/*.ts"],
      "outputs": ["test-results/**"]
    },
    "test:coverage": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.ts", "tests/**/*.ts"],
      "outputs": ["coverage/**", "test-results/**"]
    },
    "test:integration": {
      "dependsOn": ["build", "build:native"],
      "inputs": ["src/**/*.ts", "tests/integration/**/*.ts", "bin/**"],
      "outputs": ["test-results/**"]
    },
    "lint": {
      "inputs": ["src/**/*.ts", "src/**/*.js", "tests/**/*.ts", "biome.json"],
      "outputs": []
    },
    "lint:fix": {
      "inputs": ["src/**/*.ts", "src/**/*.js", "tests/**/*.ts", "biome.json"],
      "outputs": []
    },
    "format": {
      "inputs": ["src/**/*.ts", "src/**/*.js", "tests/**/*.ts", "biome.json"],
      "outputs": []
    },
    "format:check": {
      "inputs": ["src/**/*.ts", "src/**/*.js", "tests/**/*.ts", "biome.json"],
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
