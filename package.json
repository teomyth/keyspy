{
  "name": "keyspy",
  "version": "1.0.4",
  "description": "A cross-platform global keyboard and mouse listener for Node.js",
  "types": "build/index.d.ts",
  "main": "build/index.js",
  "files": ["build/**/*", "scripts/download-binaries.js", "README.md", "LICENSE"],
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "postinstall": "node scripts/download-binaries.js",
    "build:native": "node scripts/build-native.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:manual": "npx ts-node examples/manual-test.ts",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "clean": "rm -rf build dist coverage test-results .turbo",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm run test",
    "release": "release-it",
    "release:dry": "release-it --dry-run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teomyth/keyspy.git"
  },
  "keywords": [
    "key",
    "listener",
    "global",
    "node",
    "keyboard",
    "mouse",
    "cross-platform",
    "hook",
    "spy",
    "monitor"
  ],
  "author": "teomyth",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/teomyth/keyspy/issues"
  },
  "homepage": "https://github.com/teomyth/keyspy#readme",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@release-it/conventional-changelog": "^8.0.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "release-it": "^17.8.2",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.2",
    "turbo": "^2.3.0",
    "typescript": "^5.6.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "sudo-prompt": "github:ElBonds/sudo-prompt"
  }
}
