{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": true,
    "requireBranch": ["main", "master"],
    "addUntrackedFiles": false
  },
  "github": {
    "release": false
  },
  "npm": {
    "publish": true,
    "publishPath": ".",
    "access": "public",
    "otp": false
  },
  "hooks": {
    "before:init": ["pnpm run lint"],
    "after:bump": ["pnpm run build"],
    "before:release": "pnpm run build",
    "after:release": "echo Successfully released ${name} v${version} to NPM. GitHub Release and binaries will be created by GitHub Actions."
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
